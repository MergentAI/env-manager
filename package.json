{
  "name": "env-manager-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm test --workspaces",
    "lint": "npm run lint --workspaces",
    "dev": "concurrently \"npm run dev --workspace=@env-manager/server\" \"npm run dev --workspace=@env-manager/client\" --names \"SERVER,CLIENT\" --prefix-colors \"blue,green\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  }
}
